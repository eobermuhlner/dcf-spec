{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dcf-spec.dev/schema/v1.0.0/navigation.schema.json",
  "title": "DCF Navigation Schema",
  "description": "Schema for Design Concept Format navigation graph",
  "type": "object",
  "properties": {
    "dcf_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "profile": {
      "type": "string",
      "enum": ["lite", "standard", "strict"]
    },
    "app": {
      "type": "string",
      "description": "Application name"
    },
    "routes": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/route"
      }
    },
    "transitions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/transition"
      }
    }
  },
  "required": ["dcf_version", "routes"],
  "definitions": {
    "route": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "description": "URL path pattern"
        },
        "layout": {
          "type": "string",
          "description": "Layout template to use"
        },
        "screen": {
          "type": "string",
          "description": "Screen to render"
        },
        "parent": {
          "type": "string",
          "description": "Parent route for hierarchy"
        },
        "guards": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Route guards (e.g., auth requirements)"
        }
      },
      "required": ["path", "screen"]
    },
    "transition": {
      "type": "object",
      "properties": {
        "from": {
          "type": "string",
          "description": "Source route"
        },
        "to": {
          "type": "string",
          "description": "Destination route"
        },
        "trigger": {
          "type": "string",
          "enum": ["click", "submit", "gesture", "timer", "event"],
          "description": "What triggers the transition"
        },
        "source": {
          "type": "string",
          "description": "Component.element that triggers transition"
        },
        "animation": {
          "type": "string",
          "description": "Transition animation type"
        }
      },
      "required": ["from", "to", "trigger"]
    }
  }
}
